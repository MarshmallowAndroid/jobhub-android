<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="203dp"
            android:layout_height="86dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logoname" />

        <ImageView
            android:id="@+id/spacer"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="46dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bell" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="38dp"
                    android:layout_height="64dp"
                    android:src="@drawable/setting" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/application_section"
        android:layout_below="@id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/vacancy_title"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="@drawable/bg_header_rounded"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center"
            android:padding="-15dp"
            android:text="JOB SEEKER"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4682A9"
            android:textFontWeight="800"
            android:textSize="19dp"
            android:textStyle="bold"
            android:translationY="-20dp" />

        <LinearLayout
            android:id="@+id/application_list_container"
            android:layout_width="match_parent"
            android:layout_height="493dp"
            android:background="@drawable/bg_content_rounded"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="-40dp">

            <!-- Job Card -->
            <!--1-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/jobcard_bg"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SOFTWARE ENGINEERING"
                        android:textColor="#6C7282"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="2dp"
                        android:background="#6C7282" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/circleborder"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_nav_profile"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Takuya Nakasone\n22 years old\nBachelor of Science in Information Tech.."
                            android:textColor="#6C7282"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--2-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/jobcard_bg"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SOFTWARE ENGINEERING"
                        android:textColor="#6C7282"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="2dp"
                        android:background="#6C7282" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="71dp"
                            android:layout_height="73dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="2dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pfp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Nash Jerby Joo\n21 years old\nBachelor of Science in Computer Science"
                            android:textColor="#6C7282"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--3-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="304dp"
                android:layout_height="102dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/jobcard_bg"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="MARKETING ASSOCIATE"
                    android:textColor="#6C7282"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:background="#6C7282" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circleborder"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_nav_profile"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Jacob Bes Tarun\n23 years old\nBachelor of Science in Business..."
                        android:textColor="#6C7282"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:src="@drawable/message_button"
                        android:elevation="4dp"
                        android:translationZ="4dp"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:elevation="4dp"
                        android:translationZ="4dp"
                        android:src="@drawable/delete_button"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/emp_post" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="116dp"
                android:layout_height="82dp"
                android:src="@drawable/emp_match"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/emp_messages"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
