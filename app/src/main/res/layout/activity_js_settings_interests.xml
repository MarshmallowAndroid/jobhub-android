<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">


    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/return_button"
                    android:layout_width="36dp"
                    android:layout_height="38dp"
                    android:src="@drawable/arrowback" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:padding="1dp"
            android:text="Interested In"
            android:textColor="@color/md_theme_primary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Gray line below header -->
    <ImageView
        android:id="@+id/grayline"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/header_container"
        android:layout_marginTop="-32dp"
        android:layout_marginBottom="-7dp"
        android:scaleType="fitXY"
        android:src="@drawable/grayline" />


    <LinearLayout
        android:id="@+id/titlesection0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="COMPUTER SCIENCE"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- First Section -->
    <LinearLayout
        android:id="@+id/name_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="34dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Analyst"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            style="button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Project Manager"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <!-- Second Section -->
    <LinearLayout
        android:id="@+id/name_section2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="94dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Designer"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Engineer"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Scientist"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <!-- Third Section -->
    <LinearLayout
        android:id="@+id/name_section3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="154dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Technician"
            android:textSize="12sp"
            android:layout_marginRight="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Developer"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Scrum"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/titlesection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="218dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="MEDICINE"
            android:textColor="#999999"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>



    <!-- Fifth Section -->
    <LinearLayout
        android:id="@+id/name_section5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="244dp">



        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Therapist"
            android:textSize="12sp"
            android:layout_marginRight="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Physician"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Dentist"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <!-- Sixth Section -->
    <LinearLayout
        android:id="@+id/name_section6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="304dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Pharmacist"
            android:textSize="12sp"
            android:layout_marginRight="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Medical Assistant"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <!-- Seventh Section -->
    <LinearLayout
        android:id="@+id/name_section7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginTop="364dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Veterinarian"
            android:textSize="12sp"
            android:layout_marginRight="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Doctor"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profession18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Nurse"
            android:textSize="12sp"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_section"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="401dp"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        android:padding="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_phone_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4682A9"
            android:fontFamily="@font/montserrat_bold"
            android:text="UPDATE"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>
    </LinearLayout>

</RelativeLayout>