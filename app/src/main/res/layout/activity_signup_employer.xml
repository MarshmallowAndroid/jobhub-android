<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#427D9D"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@android:color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">


            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="66dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="191dp"
                    android:layout_height="235dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/logoname" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/jobToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Employer"
                        android:textColor="#427D9D"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.Group
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/companyName"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/inputtextoutline"
                android:fontFamily="@font/montserrat"
                android:hint="Company Name"
                android:paddingHorizontal="16dp"
                android:textColor="#4A90E2"
                android:textColorHint="#4A90E2"
                android:textSize="16dp" />

            <!-- android:background="@drawable/rounded_edittext" -->

            <EditText
                android:id="@+id/emailEditText3"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/inputtextoutline"
                android:fontFamily="@font/montserrat"
                android:hint="Company Address"
                android:paddingHorizontal="16dp"
                android:textColor="#4A90E2"
                android:textColorHint="#4A90E2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/emailEditText4"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/inputtextoutline"
                android:fontFamily="@font/montserrat"
                android:hint="Email"
                android:paddingHorizontal="16dp"
                android:textColor="#4A90E2"
                android:textColorHint="#4A90E2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/confirmEmail"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/inputtextoutline"
                android:fontFamily="@font/montserrat"
                android:hint="Confirm Email"
                android:paddingHorizontal="16dp"
                android:textColor="#4A90E2"
                android:textColorHint="#4A90E2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/password"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/inputtextoutline"
                android:fontFamily="@font/montserrat"
                android:hint="Password"
                android:paddingHorizontal="16dp"
                android:textColor="#4A90E2"
                android:textColorHint="#4A90E2"
                android:textColorLink="#4A90E2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/confirmPassword"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/inputtextoutline"
                android:fontFamily="@font/montserrat"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="#4A90E2"
                android:textColorHint="#4A90E2"
                android:textSize="16dp" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#4682A9"
                android:fontFamily="@font/montserrat_bold"
                android:text="SIGN UP"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
