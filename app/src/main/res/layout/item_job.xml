<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dragEdge="bottom"
        app:mode="same_level">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_theme_surfaceContainer"
            tools:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="@color/md_theme_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--LOCATION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/details_bubble"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_location_dark" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Makati City, Metro Manila"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:maxLength="30"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>

                    <!--COMPANY -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/details_bubble"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_location_city" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="iACADEMY"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:maxLength="30"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>

                    <!--Job Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/details_bubble"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_jobduration" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Full Time (Day Shift), On-site"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:maxLength="40"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>

                    <!--Objectives -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/details_bubble"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="-Promote iACADEMY to boost enrollment.                                                -Provide admissions guidance and collaborate on recruitment.                                                    -Maintain records and support the admissions team"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:maxLines="5"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Skills/Requirements Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/details_bubble"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- First row of skills -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/details_bubble"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:gravity="center"
                                app:cardElevation="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="College Graduate"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:maxLength="20"
                                    android:ellipsize="end"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/details_bubble"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:gravity="center"
                                app:cardElevation="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="No work experience needed."
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:maxLength="26"
                                    android:ellipsize="end"
                                    android:singleLine="true" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Second row of skills -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/details_bubble"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:gravity="center"
                                app:cardElevation="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="Editing Skills"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:maxLength="20"
                                    android:ellipsize="end"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/details_bubble"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:gravity="center"
                                app:cardElevation="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="Creative"
                                    android:textColor="#333333"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:maxLength="20"
                                    android:ellipsize="end"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/details_bubble"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:gravity="center"
                                app:cardElevation="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="P40,000-P50,000"
                                    android:textColor="#333333"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    android:maxLength="20"
                                    android:ellipsize="end"
                                    android:singleLine="true" />
                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradation_black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="36dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="24dp"
                        android:background="@color/md_theme_surface"
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        android:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/job_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/md_theme_inverseOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="Job Position" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/job_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/md_theme_inverseOnSurface"
                            tools:text="Location" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>

    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_primary"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/swipe_left" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_primary"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/swipe_right" />
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>