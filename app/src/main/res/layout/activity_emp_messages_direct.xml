<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/grayline2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/bottom_nav"
        android:scaleType="fitXY"
        android:src="@drawable/grayline"/>

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/return_button"
                    android:layout_width="46dp"
                    android:layout_height="42dp"
                    android:src="@drawable/arrowback" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/application_title"
            android:layout_width="319dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:padding="1dp"
            android:text="iACADEMY"
            android:textColor="@color/accent"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_background"
        android:layout_below="@id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        />

    <LinearLayout
        android:id="@+id/notification_section"
        android:layout_below="@id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/chatbox"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/addlogo" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photocamlogo" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagelogo" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/graychatbox" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>



    <ImageView
        android:id="@+id/grayline"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="55dp"
        android:scaleType="fitXY"
        android:src="@drawable/grayline" />


    <LinearLayout
        android:id="@+id/textarea"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center">


    </LinearLayout>
</RelativeLayout>
