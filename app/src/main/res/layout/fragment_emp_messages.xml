<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/messages_title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_header_rounded_top"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:padding="16dp"
        android:text="MESSAGES"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#4682A9"
        android:textFontWeight="800"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/messages_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/messages_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_content_rounded_bottom"
        android:fillViewport="true"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/message_card_1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/jobcard_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/message_avatar_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circleborder"
                        android:padding="4dp"
                        android:scaleY="1.8"
                        android:scaleX="1.8"
                        android:src="@drawable/pfp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sender_name_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:text="Nash Jerby Joo"
                            android:textAlignment="textStart"
                            android:textColor="#6C7282"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/message_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="1h"
                            android:textColor="#999999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/message_preview_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="2"
                        android:text="Good day, Sir. I would be available in..."
                        android:textColor="#bcbdbd"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_card_2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/jobcard_bg"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/message_avatar_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circleborder"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_nav_profile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sender_name_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:text="Takuya Nakasone"
                            android:textAlignment="textStart"
                            android:textColor="#6C7282"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/message_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="1h"
                            android:textColor="#999999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/message_preview_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="2"
                        android:text="Hello, I can go at Makati on Saturday..."
                        android:textColor="#bcbdbd"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
