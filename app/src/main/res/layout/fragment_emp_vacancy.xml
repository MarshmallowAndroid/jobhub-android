<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Header Title -->
    <TextView
        android:id="@+id/messages_title"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_header_rounded"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:padding="16dp"
        android:text="VACANCY"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#4682A9"
        android:textFontWeight="800"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- Scrollable List -->
    <ScrollView
        android:id="@+id/messages_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/messages_title"
        android:layout_margin="8dp"
        android:background="@drawable/bg_content_rounded"
        android:fillViewport="true"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="99dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/jobcard_bg"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="SOFTWARE ENGINEER"
                            android:textAlignment="center"
                            android:textColor="#6C7282"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="#6C7282" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Software engineering candidates must demonstrate strong leadership in the application..."
                            android:textColor="#6C7282"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="99dp"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/jobcard_bg"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="MARKETING ASSOCIATE"
                            android:textAlignment="center"
                            android:textColor="#6C7282"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="8dp"
                            android:background="#6C7282" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Promote iAcademy to boost enrollment. Provide admissions guidance and collaborate..."
                            android:textColor="#6C7282"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 3 with edit/delete outside -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="99dp"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/jobcard_bg"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="INFORMATION TECHNOLOGY"
                            android:textAlignment="center"
                            android:textColor="#6C7282"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="8dp"
                            android:background="#6C7282" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Looking for detail-oriented and analytical IT Auditor to join our team. The succes..."
                            android:textColor="#6C7282"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Edit/Delete Buttons Outside -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:src="@drawable/edit_button"
                        android:layout_marginTop="10dp"
                        android:elevation="4dp"
                        android:translationZ="4dp" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:elevation="4dp"
                        android:translationZ="4dp"
                        android:src="@drawable/delete_button" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
